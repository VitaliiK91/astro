---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			body {
    margin: 0;
    padding: 0;
    font-family: 'Arial', sans-serif;
    background-color: #f0f0f0;
}

header {
    background-color: #0099cc;
    color: white;
    text-align: center;
    padding: 1em 0;
}

nav ul {
    margin: 0;
    padding: 0;
    list-style-type: none;
}

nav ul li {
    display: inline;
    margin-right: 20px;
}

nav a {
    color: white;
    text-decoration: none;
    font-weight: bold;
}

#home h1 {
    margin: 0;
    color: #ffcc00;
}

#home p {
    margin: 0;
    color: #ffffff;
}

main {
    padding: 2em;
}

#map-placeholder {
    background-color: #ffffff;
    border-radius: 8px;
    padding: 2em;
    margin: 2em 0;
    text-align: center;
}

#map {
    width: 100%;
    height: 400px;
    background-color: #c0e4fa;
    border-radius: 8px;
    position: relative;
}

#map::before {
    content: 'Interactive Map Placeholder';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: #0077a3;
    font-weight: bold;
}

footer {
    background-color: #0099cc;
    color: white;
    text-align: center;
    padding: 1em 0;
    position: fixed;
    bottom: 0;
    width: 100%;
}

		</style>
	</head>
	<body>
		<Header title={SITE_TITLE} />
		<main>
			<!-- <h1>Welcome to Paw Beach Adventures!</h1>
            <p>Explore the whimsical universe of our animated furry friends!</p> -->
			<section id="map-placeholder">
				<h2>Discover Paw Beach</h2>
				<div id="map">Interactive Map Here</div>
			</section>
			
		</main>
		<Footer />
	</body>
</html>
